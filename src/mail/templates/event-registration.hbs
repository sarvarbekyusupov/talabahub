            <div class="event-details">
                <h3>{{eventTitle}}</h3>
                <p><strong>ğŸ“… Date:</strong> {{eventDate}}</p>
                <p><strong>ğŸ• Time:</strong> {{eventTime}}</p>
                {{#if location}}
